    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web Server",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}",
            "args": [
                "--device-id=web-server",
                "--web-port=8080",
            ],
        },
        {
            "name": "Web Browser",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}",
            "args": [
                "--device-id=chrome",
                "--web-port=8080",
            ],
        }
    ]
}